<!-- app/views/plans/index.html.erb -->
<h1>Plans</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.start_date %></td>
        <td><%= plan.end_date %></td>
        <td><%= plan.description %></td>
        <td>
          <%= link_to 'Show', plan %>
          <%= link_to 'Edit', edit_plan_path(plan) %>
          <%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Plan', new_plan_path %>
